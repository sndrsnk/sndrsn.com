# Ephemeral Audio Decay System Configuration

# Directory paths
AUDIO_DIR=./audio
METADATA_DIR=./metadata

# Audio processing
SEGMENT_DURATION=0.5

# Degradation settings
# Degradation rate: percentage of dropout per play (default: 1.0 = 1% per play)
# For faster testing, try 5.0 or 10.0
DEGRADATION_RATE=1.0

# CORS configuration (set to your Eleventy site URL in production)
CORS_ORIGIN=*

# Flask configuration
PORT=5000
FLASK_DEBUG=False
