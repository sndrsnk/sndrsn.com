<!doctype html>
<html lang="{{ metadata.language }}">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>{{ title or metadata.title }}</title>
        <meta name="description" content="{{ description or metadata.description }}">
        <link rel="alternate" href="feed/feed.xml" type="application/atom+xml" title="{{ metadata.title }}">
    <meta
        name="generator" content="{{ eleventy.generator }}">
    {%- css %}{% include "src/assets/css/styles.css" %}{% endcss %}
    <style>{% getBundle "css" %}</style>
    </head>
    <body>
        <header>
            <nav>
                <div>
                    <h1><a href="/">Kevin Sanderson</a></h1>
                    <ul>
                        <li class="nav-item">
                            <a href="/posts">Posts</a>
                        </li>
                        <span class="nav-separator"></span>
                        <li class="nav-item">
                            <a href="/portfolio">Projects</a>
                        </li>
                        <span class="nav-separator"></span>
                        <li class="nav-item">
                            <a href="/about">About Me</a>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>
        <main>
            {{ content | safe }}
        </main>
        <footer>
            <hr>
            <ul class="footer-links">
                <li>
                    <a title="Kevin Sanderson on LinkedIn" href="https://www.linkedin.com/in/ksndrsn/">LinkedIn</a>
                </li>
                <span class="nav-separator"></span>
                <li>
                    <a title="@sndrsnk on GitHub" href="https://github.com/sndrsnk">GitHub</a>
                </li>
                <li class="built-with">
                    Built with 
                    <a href="https://www.11ty.dev/">Eleventy</a>.
            </li>
            </ul>
        </footer>
        <script type="module" src="{% getBundleFileUrl "js" %}"></script>
    </body>
</html>